@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix mod: <http://moddevices.com/ns/mod#>.
@prefix modgui: <http://moddevices.com/ns/modgui#>.
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix atom: <http://lv2plug.in/ns/ext/atom#> .
@prefix midi: <http://lv2plug.in/ns/ext/midi#> .
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .

<http://moddevices.com/plugins/mod-devel/mod-cv-random>
a lv2:Plugin, mod:ControlVoltagePlugin;

doap:name "Random CV Generator";
doap:license "GPL v2+";
doap:developer [
    foaf:name "Bram Giesen";
    foaf:homepage <>;
    foaf:mbox <mailto:bram@moddevices.com>;
    ];

doap:maintainer [
    foaf:name "MOD";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:bram@moddevices.com>;
    ];

    lv2:minorVersion 1;
    lv2:microVersion 0;

rdfs:comment """
Random CV generator. It uses a gate input to trigger the next random value
""";

lv2:port
[
    a lv2:InputPort, lv2:CVPort, mod:CVPort;
    lv2:index 0;
    lv2:minimum 0.0 ;
    lv2:maximum 10.0 ;
    lv2:symbol "GateIn";
    lv2:name "Gate In";
],
[
    a lv2:OutputPort, lv2:CVPort, mod:CVPort;
    lv2:index 1;
    lv2:minimum -5.0 ;
    lv2:maximum 5.0 ;
    lv2:symbol "CVout";
    lv2:name "CV Output";
]
,
[
    a lv2:InputPort ,
    lv2:ControlPort ;
    lv2:index 2 ;
    lv2:symbol "MinValue" ;
    lv2:name "MinValue";
    lv2:default 0.0 ;
    lv2:minimum -10.0 ;
    lv2:maximum 10.0 ;
    mod:volts ;
]
,
[
    a lv2:InputPort ,
    lv2:ControlPort ;
    lv2:index 3 ;
    lv2:symbol "MaxValue" ;
    lv2:name "MaxValue";
    lv2:default 1.0 ;
    lv2:minimum -10.0 ;
    lv2:maximum 10.0 ;
    mod:volts ;
]
,
[
    a lv2:InputPort,
    lv2:ControlPort ;
    lv2:index 4;
    lv2:symbol "Trigger";
    lv2:name "New Random Value";
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:portProperty lv2:integer, lv2:toggled, epp:trigger ;
] ,
[
     a lv2:InputPort ,
     lv2:ControlPort ;
     lv2:index 5 ;
     lv2:symbol "Enabled" ;
     lv2:name "Enabled" ;
     lv2:default 1.0 ;
     lv2:minimum 0.0 ;
     lv2:maximum 1.0 ;
     lv2:designation lv2:enabled;
     lv2:portProperty lv2:toggled;
]
.
