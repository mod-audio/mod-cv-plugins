@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix mod: <http://moddevices.com/ns/mod#>.
@prefix modgui: <http://moddevices.com/ns/modgui#>.
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .

<http://moddevices.com/plugins/mod-devel/mod-cv-to-audio>
a lv2:Plugin, mod:ControlVoltagePlugin;

doap:name "CV to Audio";
doap:license "GPL v2+" ;
doap:developer [
    foaf:name "Bram Giesen & Jarno Verheesen";
    foaf:homepage <>;
    foaf:mbox <mailto:bram@moddevices.com>;
    ];

doap:maintainer [
    foaf:name "MOD";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:bram@moddevices.com>;
    ];

    lv2:minorVersion 1;
    lv2:microVersion 0;

rdfs:comment """
CV to audio converts an control voltage signal to an audio signal with DC Blocker. This blocker can be turned of if needed. This is NOT recommended when the plugin is connected to any kind of audio output!
""";

lv2:port
[
    a lv2:InputPort, lv2:CVPort;
    lv2:index 0;
    lv2:symbol "CVIn";
    lv2:name "CV Input";
],
[
    a lv2:OutputPort, lv2:AudioPort;
    lv2:index 1;
    lv2:symbol "AudioOut";
    lv2:name "Audio Output";
]
,
[
    a lv2:InputPort ,
    lv2:ControlPort ;
    lv2:index 2 ;
    lv2:symbol "Level" ;
    lv2:name "Level";
    lv2:default 0.5 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
]
,
[
    a lv2:InputPort ,
    lv2:ControlPort ;
    lv2:index 3 ;
    lv2:symbol "DCBlock" ;
    lv2:name "DC Blocker";
    lv2:default 1.0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
    lv2:designation lv2:enabled;
    lv2:portProperty lv2:toggled;
]
,
[
    a lv2:InputPort ,
    lv2:ControlPort ;
    lv2:index 4 ;
    lv2:symbol "ENABLED" ;
    lv2:name "ENABLED" ;
    lv2:default 1.0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
    lv2:designation lv2:enabled;
    lv2:portProperty lv2:toggled;
]
.

